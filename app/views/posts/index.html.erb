<h1>Twitterクローン</h1>
<table>
  <tr>
    <th>Content</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.content %></td>

      <td><%= link_to '詳細を確認する', post_path(post.id) %></td>
      <td><%= link_to "ツイートを編集する", edit_post_path(post.id) %></td>
    </tr>
  <% end %>
</table>
<%= link_to '新しくツイートを投稿する', new_post_path %>